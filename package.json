{
    "name": "maple-metting",
    "module": "./src/index.ts",
    "type": "module",
    "scripts": {
        "dev": "bun --env-file=.env.development --hot ./src/index.ts",
        "start": "bun --env-file=.env ./dist/index.js",
        "docker-build": "sudo docker build --pull -t maple-metting-docker-server .",
        "docker-run": "sudo docker run -d -p 3000:3000 maple-metting-docker-server",
        "build": "bun build ./src/index.ts --outdir ./dist --target=bun",
        "test": "bun test --preload ./src/index.ts",
        "production": "bun --env-file=.env --watch ./dist/index.js"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/cors": "^2.8.17",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/nodemailer": "^6.4.15",
        "@types/uuid": "^9.0.8",
        "tsc-alias": "^1.8.8"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/express": "^4.17.21",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cors": "^2.8.5",
        "es6-shim": "^0.35.8",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "moment-timezone": "^0.5.45",
        "mongoose": "^8.3.1",
        "nodemailer": "^6.9.14",
        "reflect-metadata": "^0.2.2",
        "uuid": "^10.0.0"
    },
    "paths": {
        "@/*": [
            "dist/*"
        ]
    }
}
